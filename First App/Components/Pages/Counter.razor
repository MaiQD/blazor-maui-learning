@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<input type="text" @bind="message" @oninput="args => currentCount++" />
<p>@message</p>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="() => message= string.Empty">Clear</button>
@if (currentCount > 3)
{
    <p>You win</p>
}
@code {
    private int currentCount = 0;
    private string message = string.Empty;
    [Parameter]
    public int IncreamentAmount { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount+= IncreamentAmount;
    }
    private Task OnChange(ChangeEventArgs args)
    {
        message = args.Value?.ToString() ?? string.Empty;
        return Task.CompletedTask;
    }
}
